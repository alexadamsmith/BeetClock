<resources>

    <style name="ActionBarCompat" parent="@style/Base.Widget.AppCompat.ActionBar">
        <item name="titleTextStyle">@style/titleStyle</item>
    </style>

    <style name="titleStyle" parent="@style/Base.TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/action_title</item>
    </style>

    <style name="buttonTimer" parent="@style/Base.Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/button_padding</item>
        <!--<item name="android:background">@drawable/button_timer</item>-->
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="buttonGraphic" parent="@style/Base.Widget.AppCompat.ImageButton">
        <item name="android:tint">@color/button_text</item>
    </style>

    <style name="headline" parent="@style/Base.TextAppearance.AppCompat.Headline">
        <item name="android:typeface">serif</item>
    </style>

    <style name="title" parent="@style/Base.TextAppearance.AppCompat.Title">
        <item name="android:typeface">serif</item>
    </style>

    <style name="subhead" parent="@style/Base.TextAppearance.AppCompat.Subhead">
        <!--<item name="android:fontFamily">serif</item>-->
    </style>

    <style name="caption" parent="@style/Base.TextAppearance.AppCompat.Caption"></style>

    <style name="spinner" parent="@style/Base.Widget.AppCompat.Spinner.Underlined">
        <!--<item name="android:minWidth">@dimen/menu_width</item>-->
        <item name="android:minWidth">@dimen/menu_width</item>
        <!--<item name="android:minHeight">@dimen/menu_item_height</item>-->
        <!--<item name="android:dropDownWidth">@dimen/menu_width</item>-->
        <item name="android:spinnerMode">dialog</item>
        <item name="android:popupBackground">@color/menu_bg</item>
        <item name="android:background">@color/colorBackground</item>
        <!--<item name="android:popupElevation">@dimen/menu_elevation</item>-->
        <!--<item name="android:dropDownSpinnerStyle"></item>-->
    </style>

    <style name="spinner_item" parent="@style/Base.Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingTop">@dimen/menu_padding</item>
        <item name="android:paddingLeft">@dimen/menu_padding</item>
        <item name="android:paddingRight">@dimen/menu_padding</item>
        <item name="android:paddingBottom">@dimen/menu_padding_bottom</item>
    </style>


    <!-- Original styles -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textViewStyle">@style/SerifTextViewStyle</item>
        <item name="android:buttonStyle">@style/SerifButtonStyle</item>
        <item name="android:scrollViewStyle">@style/SerifScrollStyle</item>
        <item name="android:editTextStyle">@style/SerifEditText</item>

        <item name="actionOverflowMenuStyle">@style/CMOptionsMenu</item>


    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>



    <style name="CMOptionsMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@color/colorBackground</item>
    </style>

    <style name="SerifTextViewStyle" parent="android:Widget.TextView">
        <item name="android:typeface">serif</item>
        <item name="android:textColor">@color/colorTextStd</item>
    </style>

    <style name="SerifButtonStyle" parent="android:Widget.Button">
        <item name="android:typeface">serif</item>
        <item name="android:background">@drawable/button_style</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/colorTextStd</item>
    </style>

    <style name="SerifScrollStyle" parent="android:Widget.ScrollView">
        <item name="android:typeface">serif</item>
        <item name="android:textColor">@color/colorTextStd</item>
    </style>

    <style name="SerifEditText" parent="android:Widget.EditText">
        <item name="android:typeface">serif</item>
        <item name="android:textColor">@color/colorTextStd</item>
    </style>

</resources>