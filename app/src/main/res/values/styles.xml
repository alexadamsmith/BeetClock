<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="buttonTimer" parent="@style/Base.Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/button_minheight</item>
        <item name="android:minWidth">@dimen/button_minwidth_raised</item>
        <item name="android:padding">@dimen/button_padding_special</item>
        <item name="android:layout_margin">@dimen/button_padding</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="buttonGraphic" parent="@style/Base.Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:minWidth">@dimen/button_square_min</item>
        <item name="android:minHeight">@dimen/button_square_min</item>
        <item name="android:padding">@dimen/button_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:tint">@color/colorButton</item>
        <!--<item name="android:background">?android:attr/selectableItemBackground</item>-->
    </style>

    <style name="buttonFlat" parent="@style/Base.Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:minWidth">@dimen/button_minwidth</item>
        <item name="android:minHeight">@dimen/button_minheight</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:drawablePadding">@dimen/key_padding</item>
    </style>

    <style name="buttonRaised" parent="@style/Base.Widget.AppCompat.Button.Colored">
        <item name="android:minWidth">@dimen/button_minwidth</item>
        <item name="android:minHeight">@dimen/button_minheight</item>
        <item name="android:padding">@dimen/button_padding</item>
        <item name="android:background">@color/colorButton</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:tint">@color/button_text</item>
        <item name="android:drawablePadding">@dimen/key_padding</item>
    </style>

    <style name="title" parent="@style/Base.TextAppearance.AppCompat.Title">
    </style>

    <style name="subhead" parent="@style/Base.TextAppearance.AppCompat.Body2">
    </style>

    <style name="body" parent="@style/Base.TextAppearance.AppCompat.Body1">
    </style>

    <style name="input" parent="@style/Base.TextAppearance.AppCompat.Subhead"></style>

    <style name="caption" parent="@style/Base.TextAppearance.AppCompat.Caption"></style>

    <style name="spinner" parent="@style/Base.Widget.AppCompat.Spinner">
        <!--<item name="android:dropDownWidth">@dimen/menu_width</item>-->
        <item name="android:spinnerMode">dialog</item>
        <item name="android:popupBackground">@color/menu_bg</item>
        <item name="android:background">@color/colorBackground</item>
        <!--<item name="android:popupElevation">@dimen/menu_elevation</item>-->
        <!--<item name="android:dropDownSpinnerStyle"></item>-->
    </style>

    <style name="spinner_item" parent="@style/Base.Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/menu_padding</item>
        <item name="android:paddingRight">@dimen/menu_padding</item>
    </style>

    <style name="menu_box_trans">
        <item name="android:background">@color/translucent_bg</item>
        <item name="android:paddingTop">@dimen/key_padding</item>
        <item name="android:paddingBottom">@dimen/key_padding</item>
        <item name="android:paddingLeft">@dimen/key_menu_padding</item>
        <item name="android:paddingRight">@dimen/key_menu_padding</item>
        <item name="android:layout_margin">@dimen/key_padding</item>
    </style>

    <style name="menu_box_land">
        <item name="android:background">@color/translucent_bg</item>
        <item name="android:paddingTop">@dimen/key_padding</item>
        <item name="android:paddingBottom">@dimen/key_padding</item>
        <item name="android:paddingLeft">@dimen/key_padding</item>
        <item name="android:paddingRight">@dimen/key_padding</item>
        <item name="android:layout_marginTop">@dimen/activity_margin</item>
        <item name="android:layout_marginBottom">@dimen/activity_margin</item>
        <item name="android:layout_marginLeft">@dimen/wide_margin</item>
        <item name="android:layout_marginRight">@dimen/wide_margin</item>
    </style>

    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
        <item name="android:layout_marginBottom">@dimen/layout_bumper</item>
    </style>

    <style name="warning_box">
        <item name="android:padding">@dimen/key_menu_padding</item>
        <item name="android:background">@drawable/warning_box</item>
        <item name="android:layout_marginLeft">@dimen/indent</item>
        <item name="android:layout_marginRight">@dimen/indent</item>
    </style>

    <style name="warning_text" parent="@style/Base.TextAppearance.AppCompat.Body2">
        <item name="android:textColor">@color/warning</item>
    </style>



</resources>