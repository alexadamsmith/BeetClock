<?xml version="1.0" encoding="utf-8"?>

<!--Thanks to Emmby for the code this is based on: http://stackoverflow.com/questions/1521640/standard-android-button-with-a-different-color -->

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/colorButtonPressed"/>
            <corners
                android:radius="@dimen/button_padding" />
            <padding
                android:left="@dimen/button_padding"
                android:top="@dimen/button_padding"
                android:right="@dimen/button_padding"
                android:bottom="@dimen/button_padding" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <solid
                android:color="@color/colorButton"/>
            <corners
                android:radius="@dimen/button_padding" />
            <padding
                android:left="@dimen/button_padding"
                android:top="@dimen/button_padding"
                android:right="@dimen/button_padding"
                android:bottom="@dimen/button_padding" />
        </shape>
    </item>

    <item>
        <shape>
            <solid
                android:color="@color/colorButton"/>
            <corners
                android:radius="@dimen/button_padding" />
            <padding
                android:left="@dimen/button_padding"
                android:top="@dimen/button_padding"
                android:right="@dimen/button_padding"
                android:bottom="@dimen/button_padding" />
        </shape>
    </item>

</selector>