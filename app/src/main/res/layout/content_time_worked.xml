<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/colorBackground">

    <ImageView
        android:id="@+id/background_image"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bcbg"
        />
    <!-- android:src="@drawable/bcbg_tall" -->




    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:fillViewport="false">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:focusable="true"
            android:focusableInTouchMode="true"
            tools:showIn="@layout/activity_time_worked" tools:context=".TimeWorked"
            android:padding="@dimen/activity_margin"
            android:gravity="center_vertical|fill_vertical"
            android:id="@+id/content_main_body">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                tools:showIn="@layout/activity_time_worked" tools:context=".TimeWorked"
                android:id="@+id/crop_select"
                android:layout_marginBottom="@dimen/layout_bumper">

                <TextView
                    style="@style/subhead"
                    android:text="@string/crops"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/crop_select_header"
                    android:background="@color/colorBackground"/>

                <Spinner
                    android:id="@+id/crop_spinner_worked"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:typeface="serif"
                    android:textSize="20dp"
                    android:popupBackground="@color/colorBackground"/>

            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                tools:showIn="@layout/activity_time_worked" tools:context=".TimeWorked"
                android:layout_marginBottom="@dimen/layout_bumper">

                <TextView
                    style="@style/subhead"
                    android:text="@string/jobs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorBackground"/>

                <Spinner
                    android:id="@+id/jobs_spinner_worked"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:typeface="serif"
                    android:textSize="20dp"
                    android:popupBackground="@color/colorBackground"/>


            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/layout_bumper"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                tools:showIn="@layout/activity_time_worked" tools:context=".TimeWorked">

                <TextView
                    style="@style/subhead"
                    android:text="@string/hours_worked"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorBackground"
                    />
                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:background="@color/colorBackground"
                    >
                <EditText android:id="@+id/edit_hours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/hours_hint"
                    />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/layout_bumper"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                tools:showIn="@layout/activity_time_worked" tools:context=".TimeWorked">

                <TextView
                    style="@style/subhead"
                    android:text="@string/number_workers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorBackground"
                    />
                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:background="@color/colorBackground"
                    >
                <EditText android:id="@+id/edit_workers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/workers"
                    android:inputType="number"
                    />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/layout_bumper">

                <TextView
                    android:id="@+id/equip_title"
                    style="@style/subhead"
                    android:text="@string/equipment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorBackground"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <Spinner
                        android:id="@+id/equip_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:typeface="serif"
                        android:textSize="20dp"
                        android:layout_weight="100"
                        android:popupBackground="@color/colorBackground"/>
                    <!--android:background="@drawable/border_style"-->

                    <ImageButton

                        android:id="@+id/equip_button"
                        style="@style/buttonGraphic"
                        android:src="@drawable/ic_action_add"
                        android:text="@string/button_add"
                        android:onClick="addEquip"
                        android:layout_alignParentEnd="false"
                        android:layout_alignParentStart="false"
                        android:layout_alignParentRight="false"
                        android:layout_alignParentLeft="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/colorButton"
                        android:focusable="false"
                        android:layout_weight="1"
                        android:minWidth="@dimen/button_square_min"
                        android:layout_gravity="center_vertical"
                        android:minHeight="@dimen/button_square_min"
                        android:layout_marginLeft="@dimen/layout_bumper"
                        android:layout_marginRight="@dimen/layout_bumper"/>

                    <ImageButton

                        android:id="@+id/equip_button_remove"
                        style="@style/buttonGraphic"
                        android:src="@drawable/ic_remove_black_24dp"
                        android:onClick="remEquip"
                        android:layout_alignParentEnd="false"
                        android:layout_alignParentStart="false"
                        android:layout_alignParentRight="false"
                        android:layout_alignParentLeft="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/colorButton"
                        android:focusable="false"
                        android:layout_weight="1"
                        android:minWidth="@dimen/button_square_min"
                        android:layout_gravity="center_vertical"
                        android:minHeight="@dimen/button_square_min"
                        android:layout_marginLeft="@dimen/layout_bumper"/>
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/layout_bumper">

                <TextView
                    android:id="@+id/current_date"
                    android:text="@string/current_date"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:textSize="16dp"
                    android:background="@color/colorBackground"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/button_pickDate"
                    android:onClick="openDatePicker"
                    android:typeface="serif"
                    android:textColor="@color/colorTextStd"
                    android:textSize="16dp"
                    android:background="@drawable/button_style"/>

            </LinearLayout>


            <Button
                style="@style/buttonTimer"
                android:text="@string/button_Save"
                android:onClick="saveWork"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </ScrollView>

</FrameLayout>




